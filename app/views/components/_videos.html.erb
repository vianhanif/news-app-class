<% if !videos.empty? %>
<% if search %>
<h3>By Videos</h3>
<% end %>
<div class="row">
  <% videos.each do |video| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="row">
          <div class="col-md-12">
            <div class="text-center">
              <%
                video_new = VideoInfo.new(video.url)
              %>
              <a class="various fancybox.iframe" href="<%= video_new.embed_url || video.url %>">
                <div class="video-head-image" style="background-image: url(<%= video_new.thumbnail_medium || video.image %>);"></div>
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>
<% if action_name == 'videos' %>
<div class="text-center">
  <%= will_paginate @videos, inner_window: 1, outer_window: 1 %>
</div>
<% end %>
<% end %>
