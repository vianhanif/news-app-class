<% if !@videos.nil?  %>
<h3 class="section-heading">Latest Videos</h3>
<div class="row">
  <div class="col-md-12">
    <div class="carousel slide berita-carousel multi-item-carousel" data-ride="carousel" data-type="multi-berita" data-interval="4000" id="carousel-partner">
      <div class="carousel-inner custom-carousel-inner">
        <% @videos.each_with_index do |video, index| %>
          <div class="item <%= 'active' if index == 0 %>">
            <%
              video_new = VideoInfo.new(video.url)
            %>
            <div class="col-md-4 col-sm-6 col-xs-12">
              <div class="panel article-panel articel-at-list">
                <div class="panel-body">
                  <a href="<%= open_video video %>">
                    <div class="row">
                      <div class="col-sm-12 col-xs-5">
                        <div class="article-head-image" style="background-image:    url(<%= video_new.thumbnail_medium || video.image %>);"></div>
                      </div>
                      <div class="col-sm-12 col-xs-7 article-head-container">
                        <div class="caption">
                          <a href="#"><h3 class="thumbnail-head"><%= video.title %></h3></a>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
      <a class="left carousel-control custom-control-left" href="#carousel-partner" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
      <a class="right carousel-control custom-control-right" href="#carousel-partner" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
    </div>
  </div>

</div>
<% end %>
