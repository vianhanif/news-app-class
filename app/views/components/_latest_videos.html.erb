<h3>Latest Videos</h3>
<div class="row">
  <div class="col-md-12">
    <div class="carousel slide berita-carousel multi-item-carousel" data-ride="carousel" data-type="multi-berita" data-interval="4000" id="carousel-partner">
      <div class="carousel-inner custom-carousel-inner">
        <% @videos.each_with_index do |video, index| %>
          <div class="item <%= 'active' if index == 0 %>">
            <div class="col-md-4 col-sm-6 col-xs-12">
              <div class="row">
                <div class="col-md-12">
                  <div class="text-center">
                    <%
                      video_new = VideoInfo.new(video.url)
                    %>
                    <a class="various fancybox.iframe" href="<%= video_new.embed_url || video.url %>">
                      <div class="video-head-image" style="background-image: url('<%= video_new.thumbnail_medium || video.image %>');"></div>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      </div>
      <a class="left carousel-control custom-control-left" href="#carousel-partner" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
      <a class="right carousel-control custom-control-right" href="#carousel-partner" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
    </div>
  </div>

</div>
