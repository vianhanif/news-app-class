<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= render 'components/alert', notice: notice %>
    <div class="panel  ">
      <div class="panel-heading">
        <ul class="list-inline table-heading">
          <li><label class="table-head-panel">Roles</label></li>
          <% if current_user.role.admin? %>
            <li class="pull-right">
              <%= link_to 'New Role', new_role_path, class: 'btn btn-default' %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Level</th>
                <% if current_user.approve? %>
                <th colspan="3"></th>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <% @roles.each do |role| %>
                <tr>
                  <td><%= role.name %></td>
                  <td><%= role.level %></td>
                  <% if current_user.role.admin? %>
                    <td><%= link_to 'Edit', edit_role_path(role) %></td>
                    <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="text-center">
          <%= will_paginate @roles, inner_window: 1, outer_window: 1 %>
        </div>
      </div>
    </div>
  </div>
</div>
