<%= simple_form_for(@role) do |f| %>
  <%= render 'components/error', form: @role %>
  <div class="panel  ">
    <div class="panel-heading">
      <ul class="list-inline table-heading">
        <li><label class="table-head-panel"><%= action_name.to_s.capitalize %> Role</label></li>
        <li class="pull-right">
          <ul class="list-inline">
            <% if action_name == 'edit' %>
             <li><%= link_to 'Show', @role, class: 'btn btn-default' %></li>
             <% end %>
            <li><%= link_to 'Back', roles_path, class: 'btn btn-default' %></li>
          </ul>
        </li>
      </ul>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-9"><%= f.input :name %></div>
        <div class="col-sm-3"><%= f.input :level %></div>
      </div>
    </div>
    <div class="panel-body text-right">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
