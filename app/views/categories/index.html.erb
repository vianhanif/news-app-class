<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= render 'components/alert', notice: notice %>
    <div class="panel  ">
      <div class="panel-heading">
        <ul class="list-inline table-heading">
          <li><label class="table-head-panel">Categories</label></li>
          <li class="pull-right">
            <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
          </li>
        </ul>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <% if current_user.approve? %>
                <th colspan="2"></th>
                <% end %>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <% if current_user.approve? %>
                  <td><%= link_to 'Edit', edit_category_path(category) %></td>
                  <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="text-center">
          <%= will_paginate @categories%>
        </div>
      </div>
    </div>
  </div>
</div>
